public class Main {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		int senha , i =0;
		System.out.println("Informe a senha");
		senha = sc.nextInt();
		while(senha != 2002) {
			System.out.println("senha incorreta");
			i++;

		}
		System.out.println("senha correta");
		
		sc.close();
		
	
	}
	}